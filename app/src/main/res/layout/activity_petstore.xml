<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white2"
    tools:context=".petstore">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg"
        android:id="@+id/rel_top_profile"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ps_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_baseline_arrow_circle_left_24" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/txt_fave"
            android:src="@drawable/img_1"
            />
        <TextView
            android:id="@+id/txt_fave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pet Stores"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textSize="22dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:id="@+id/recycler_petstore"
        tools:listitem="@layout/item_petstore"
        />




</RelativeLayout>