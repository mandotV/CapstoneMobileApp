<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reservation3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:id="@+id/pet_pp2"
            android:src="@drawable/petlogoo"
            android:elevation="20dp"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="4"
            >
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textStyle="italic"
                    android:text="Name"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/pet_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Name"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="1"
                android:layout_row="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textStyle="italic"
                    android:text="Birthdate"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/pet_bdate2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Bday"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="2"
                android:layout_row="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textStyle="italic"
                    android:text="Age"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/pet_age2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Age"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="3"
                android:layout_row="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textStyle="italic"
                    android:text="Weight"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/pet_weight2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Weight"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="1"
                android:layout_row="3"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textStyle="italic"
                    android:text="Color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/pet_color2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Color"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="2"
                android:layout_row="3"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textStyle="italic"
                    android:text="Breed"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/pet_breed2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Breed"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="3"
                android:layout_row="3"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textStyle="italic"
                    android:text="Gender"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/pet_sex2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Sex"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="3"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textStyle="italic"
                    android:text="Price"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/petprice2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Price"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>

        </GridLayout>

        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textStyle="italic"
                android:text="Description"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pet_desc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Desc"
                android:textSize="12sp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageButton
                android:id="@+id/btn_del_pet"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toEndOf="@+id/btn_save_prodEdt"
                android:src="@drawable/ic_baseline_delete_24"
                android:backgroundTint="@color/white"
                />
            <ImageButton
                android:id="@+id/petPicker"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_calendar_month_24"
                android:backgroundTint="@color/white"
                />
            <TextView
                android:id="@+id/petDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Date"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_pay_pet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay Now"
            android:layout_gravity="center"
            android:backgroundTint="@color/green"
            />


    </LinearLayout>



</RelativeLayout>