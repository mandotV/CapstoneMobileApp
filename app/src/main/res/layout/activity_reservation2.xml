<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reservation2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/rel_top_prod"
        android:outlineAmbientShadowColor="@color/bg"
        android:elevation="20dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dServ_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_baseline_arrow_circle_left_24" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/txt_serv"
            android:src="@drawable/rserv" />

        <TextView
            android:id="@+id/txt_serv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Service"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        >
        <ImageView
            android:id="@+id/serv_pp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/logo"
            />
        <TextView
            android:id="@+id/serv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Name"
            />
        <TextView
            android:id="@+id/descriptServ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            />
        <TextView
            android:id="@+id/ownerServ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Branch"
            />
        <TextView
            android:id="@+id/serv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            />
        <TextView
            android:id="@+id/serv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textStyle="bold"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageButton
                android:id="@+id/btn_cancel_serv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toEndOf="@+id/btn_save_prodEdt"
                android:src="@drawable/ic_baseline_delete_24"
                android:backgroundTint="@color/white"
                />
            <Spinner
                android:id="@+id/addDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_pay_servEdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay Now"
            android:layout_gravity="center"
            android:backgroundTint="@color/green"
            />


    </LinearLayout>

</RelativeLayout>